<%# Layout para a página de login %>

  <%# Seu código de login começa aqui, assumindo que o wrapper acima está no layout %>
  <div class="p-8 sm:p-10 rounded-xl shadow-xl w-full max-w-md" style="background-color:hsl(50, 8%, 85%)">
    <%# Logo da Igreja %>
    <%# <h1 class="text-2xl sm:text-3xl font-bold text-center text-gray-800 mb-6">FREQUENCY</h1> %>
    <%= image_tag '/logo.png', alt: 'logo' %>
    <%# <img src="/logo.png" alt="Logo da Igreja"> %>

    <%# Título da página %>
    <h1 class="text-2xl sm:text-3xl font-bold text-center text-gray-800 mb-6">Seja Bem-vindo!</h1>

    <%# Mensagens de alerta e aviso %>
    <% if alert = flash[:alert] %>
      <p class="py-2 px-3 bg-red-50 mb-5 text-red-500 font-medium rounded-lg inline-block w-full text-center" id="alert"><%= alert %></p>
    <% end %>

    <% if notice = flash[:notice] %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block w-full text-center" id="notice"><%= notice %></p>
    <% end %>

    <%# <h1 class="font-semibold text-3xl sm:text-4xl text-center text-gray-800 mb-6 sm:mb-8">Entrar</h1> %>

    <%= form_with url: session_url, class: "space-y-6" do |form| %>
      <div>
        <%= form.label :email_address, "Endereço de E-mail", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.email_field :email_address,
                              required: true,
                              autofocus: true,
                              autocomplete: "username",
                              placeholder: "seu@email.com",
                              value: params[:email_address],
                              class: "block w-full px-4 py-3 shadow-sm rounded-xl border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none placeholder-gray-400" %>
      </div>

      <div>
        <%= form.label :password, "Senha", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.password_field :password,
                                required: true,
                                autocomplete: "current-password",
                                placeholder: "Digite sua senha",
                                maxlength: 72,
                                class: "block w-full px-4 py-3 shadow-sm rounded-xl border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none placeholder-gray-400" %>
      </div>

      <div class="sm:flex sm:items-center sm:justify-between">
        <div class="sm:w-auto w-full">
          <%= form.submit "Entrar", class: "w-full sm:w-auto text-center rounded-xl px-8 py-3 bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 text-white font-medium cursor-pointer transition-colors duration-150" %>
        </div>
        <div class="mt-4 text-sm text-center sm:mt-0 sm:text-right">
          <%= link_to "Esqueceu sua senha?", new_password_path, class: "font-medium text-blue-500 hover:text-blue-700 hover:underline" %>
        </div>
      </div>
    <% end %>