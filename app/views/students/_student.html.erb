<div id="<%= dom_id student %>" class="w-full sm:w-auto my-5 space-y-5">
  <div>
    <strong class="block font-medium mb-1">Nome:</strong>
    <%= student.name %>
  </div>

  <div>
    <strong class="block font-medium mb-1">Email:</strong>
    <% if student.email.present? %>
      <%= student.email %>
    <% else %>
      <span class="text-gray-500">Email não informado</span>
    <% end %>
  </div>

  <div>
    <strong class="block font-medium mb-1">Telefone:</strong>
    <% if student.phone.present? %>
      <%= student.phone %>
    <% else %>
      <span class="text-gray-500">Telefone não informado</span>
    <% end %>
  </div>
</div>
